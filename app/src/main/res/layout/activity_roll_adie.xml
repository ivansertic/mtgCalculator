<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RollADie">

    <TextView
        android:id="@+id/firstPlayerRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="0"
        android:gravity="center"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/secondPlayerRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:layout_above="@id/firstPlayerRoll"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/btnRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/lifesize"
        android:text="Roll"
        android:layout_centerInParent="true"
        android:layout_below="@+id/firstPlayerRoll"/>
    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/lifesize"
        android:text="Exit"
        android:layout_below="@+id/btnRoll"
        android:layout_centerInParent="true"/>

</RelativeLayout>